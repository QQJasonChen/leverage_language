{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "version_name": "1.0.0-alpha (Early Test Version)",
  "description": "__MSG_extensionDescription__",
  "author": "QQJasonChen",
  "default_locale": "en",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "commands",
    "tabs",
    "identity",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.netflix.com/*",
    "https://*.udemy.com/*"
    // üöÄ FUTURE: Add new platform domains here:
    // "https://*.coursera.org/*",
    // "https://*.khanacademy.org/*", 
    // "https://*.edx.org/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  // üèóÔ∏è ARCHITECTURE: Content Script Registration Pattern
  // Each platform needs content scripts registered here. When adding new platforms:
  // 
  // 1. Add URL matches for the platform domain
  // 2. Register main content script (platform-content.js) at "document_start"  
  // 3. Add optional specialized scripts (subtitle-extractor.js) at "document_end"
  // 4. Update exclude_matches in article-collector to avoid conflicts
  // 
  // üìù PATTERN: One main content script per platform + optional specialized scripts
  "content_scripts": [
    {
      "matches": [
        "https://youglish.com/*",
        "https://*.youtube.com/*", 
        "https://www.immersionkit.com/*",
        "https://api.notion.com/*"
      ],
      "js": ["content.js"]
    },
    // üì∫ PLATFORM: YouTube content scripts  
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["youtube-content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["youtube-transcript-content.js"],
      "run_at": "document_end"
    },
    // üé≠ PLATFORM: Netflix content scripts
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["netflix-content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["netflix-subtitle-extractor.js"],
      "run_at": "document_end"
    },
    // üìö PLATFORM: Udemy content scripts
    {
      "matches": ["https://*.udemy.com/*"],
      "js": ["udemy-content.js"],
      "run_at": "document_start"
    },
    // üöÄ FUTURE: Add new platform content scripts here:
    // {
    //   "matches": ["https://*.coursera.org/*"],
    //   "js": ["coursera-content.js"],
    //   "run_at": "document_start"
    // },
    // {
    //   "matches": ["https://*.khanacademy.org/*"],
    //   "js": ["khan-content.js"], 
    //   "run_at": "document_start"
    // },
    // Generic article collector (runs on all other sites)
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://*.youtube.com/*",
        "https://*.netflix.com/*",
        "https://*.udemy.com/*",
        "https://youglish.com/*"
        // üöÄ FUTURE: Add new platforms to exclude_matches:
        // "https://*.coursera.org/*",
        // "https://*.khanacademy.org/*"
      ],
      "js": ["article-collector.js"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "commands": {
    "search-youglish": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "__MSG_search_shortcut__"
    },
    "quick-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Quick capture current subtitle on YouTube"
    },
    "open-extension": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Open Language Learning Extension"
    }
  },
  
  
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_icon": {
      "16": "icons/icons/icon16_blackwhite.png",
      "48": "icons/icons/icon48_blackwhite.png",
      "128": "icons/icons/icon128_blackwhite.png"
    }
  },
  
  "icons": {
    "16": "icons/icons/icon16_blackwhite.png",
    "48": "icons/icons/icon48_blackwhite.png",
    "128": "icons/icons/icon128_blackwhite.png"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["proxy.html", "language-selector.html", "language-selector.js", "auth-ui.html", "audio-permission.html"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["youtube-page-script.js"],
      "matches": ["https://*.youtube.com/*"]
    },
    {
      "resources": ["netflix-page-script.js"],
      "matches": ["https://*.netflix.com/*"]
    }
  ]
}