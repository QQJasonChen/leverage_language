{
  "manifest_version": 3,
  "name": "YouTube Language Master - Learn While Watching",
  "version": "3.0",
  "description": "The ultimate YouTube language learning experience. Learn vocabulary, pronunciation, and grammar directly from YouTube subtitles with AI-powered analysis.",
  "default_locale": "en",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "commands",
    "tabs",
    "declarativeNetRequest",
    "identity"
  ],
  
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://api.dictionaryapi.dev/*",
    "https://translate.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": ["youtube-standalone-inject.js"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "commands": {
    "search-youglish": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "__MSG_search_shortcut__"
    }
  },
  
  
  "action": {
    "default_title": "__MSG_extensionName__"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "lib/youtube-simple-learner.js",
        "lib/youtube-direct-learner.js"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}